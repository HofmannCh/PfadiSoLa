extends layout

block content
  small.text-secondary= uuid
  form(method='POST', action=`/edit/${id}/save`)
    input(type="hidden", value=id)
    div.form-group
      label(for='fname')
        b Vorname
      input.form-control#fname(type='text', placeholder='', name='fname', required='required', value=fname)
    div.form-group
      label(for='lname')
        b Nachname
      input.form-control#lname(type='text', placeholder='', name='lname', value=lname)
    div.form-group
      label(for='sname')
        b Pfadiname
      input.form-control#sname(type='text', placeholder='', name='sname', value=sname)
    div.form-group-range
      label(for='zombie_level')
        b Zombielevel
      input.form-control-range#zombie_level(type='range', placeholder='', name='zombie_level', value=zombie_level, min=0, max=100)
    button.btn.btn-primary.float-right(type='submit') Speichern
    a.btn.btn-secundary.float-right.mr-1(href="/") Zur√ºck

block content
    small.text-secondary= uuid
    .mt-3
        .row
            .col-6.col-md-4 Pfadiname
            .col-6.col-md-8= sname
        .row.mt-3
            .col-6.col-md-4 Zombie Level
            .col-6.col-md-4.col-lg-3.position-relative
                div.position-absolute.fixed-top.container.ml-2(style="height: 30px;")=`${zombie_level}%`
                div(style=`height: 30px; background-color: brown; width: ${zombie_level}%; float: left;`)
                div(style=`height: 30px; background-color: green; width: ${100-zombie_level}%; float: left;`)